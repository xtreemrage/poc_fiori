<mvc:View controllerName="nl.gasunie.poc.fiorimodule.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" 
	xmlns:l="sap.ui.layout">
	<Shell>
		<App>
			<pages>
				<Page title="Custom Workzone">
					<content>

                        <l:VerticalLayout width="95%" class="sapUiNoContentPadding">
                            <l:Grid >
		                        <l:content>
                                    <mvc:XMLView viewName="nl.gasunie.poc.fiorimodule.view.Tasklist">
                                        <mvc:layoutData>
                                            <l:GridData span="L3 M5 S12"  />
                                        </mvc:layoutData>
                                    </mvc:XMLView>       
                                    <mvc:XMLView viewName="nl.gasunie.poc.fiorimodule.view.Esri">
                                        <mvc:layoutData>
                                            <l:GridData span="L9 M7 S12"  />
                                        </mvc:layoutData>
                                    </mvc:XMLView>      
		                        </l:content>
                            </l:Grid>
                            <l:Grid>
		                        <l:content>
                                    <mvc:XMLView viewName="nl.gasunie.poc.fiorimodule.view.Measure">
                                        <mvc:layoutData>
                                            <l:GridData span="L12 M12 S12"  />
                                        </mvc:layoutData>
                                    </mvc:XMLView>     
		                        </l:content>
                            </l:Grid>
                            <l:Grid>
		                        <l:content>
                                    <mvc:XMLView viewName="nl.gasunie.poc.fiorimodule.view.Shiftnote">
                                        <mvc:layoutData>
                                            <l:GridData span="L12 M12 S12"  />
                                        </mvc:layoutData>
                                    </mvc:XMLView>       
		                        </l:content> 
                            </l:Grid>
                        </l:VerticalLayout>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
